extends components/base

block main
    blockquote
        p Version two is here, a complete rewrite that has been in the works for over a year!  There might be some bugs / teething issues, please post any comments / issues you have #[a(href='/issue') over here.]

    section
        center
            p
                b Upload and share any file for free, instantly from anywhere.

    section
        row
            column
                center
                    button#upload-files Upload Files
            column
                center
                    button#shorten-url Shorten URL
            if user
                column
                    center
                        a(href='/uploads')
                            button#see-uploads See Uploads

    section
        pre
            code#info.
                #[span.comment # Upload using ShareX (Windows)]
                $ Download #[a(href='https://getsharex.com/').link ShareX] then install #[a(href='/sharex/uploader.sxcu').link our uploader] and #[a(href='/sharex/shortener.sxcu').link our shortener]

                #[span.comment # Upload from your terminal]
                $ curl -F "upload=@'UPLOAD_PATH'" #[span= origin + 'upload']

                #[span.comment # See more ways to upload #[a(href='https://github.com/femto-apps/web-file-uploader/wiki/Ways-to-Upload') here]]
                #[#upload_container.hidden #[span.comment #[br]# Uploaded files]#[#uploads]]
    if user
        br
        br
        section
            row
                column(style='width:10%;')
                    p API Key:
                column(style='width:90%;')
                    input#apikey.spoiler(readonly, value=key)

block scripts
    script(src='/js/uploader.bundle.js')